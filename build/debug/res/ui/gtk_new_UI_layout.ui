                </layout>
              </object>
            </child>
          </object>
        </child>
      </object>
    </property>
    <property name="default-height">440</property>
    <property name="default-width">300</property>
    <property name="resizable">False</property>
    <property name="visible">True</property>
    <style/>
  </object>
</interface>
